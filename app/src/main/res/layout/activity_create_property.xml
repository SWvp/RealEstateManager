<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.create.CreatePropertyActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Add a property"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/create_property_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/enter_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <EditText
            android:id="@+id/type_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_property_description" />

        <ImageView
            android:id="@+id/surface_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/details_surface_description"
            android:src="@drawable/surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type_description" />

        <TextView
            android:id="@+id/surface_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/details_surface_title"
            android:textSize="@dimen/details_description_text"
            app:layout_constraintTop_toTopOf="@id/surface_icon"
            app:layout_constraintStart_toEndOf="@id/surface_icon"/>

        <EditText
            android:id="@+id/surface_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/surface_icon"
            app:layout_constraintTop_toBottomOf="@id/surface_title"/>

        <ImageView
            android:id="@+id/room_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/number_of_room"
            app:layout_constraintStart_toEndOf="@id/surface_title"
            app:layout_constraintTop_toBottomOf="@id/type_description"
            android:contentDescription="@string/details_room_description" />

        <TextView
            android:id="@+id/room_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_room_title"
            android:textSize="@dimen/details_description_text"
            app:layout_constraintTop_toTopOf="@id/surface_icon"
            app:layout_constraintStart_toEndOf="@id/room_icon"/>

        <EditText
            android:id="@+id/room_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/room_icon"
            app:layout_constraintTop_toBottomOf="@id/surface_title"/>

        <ImageView
            android:id="@+id/bedroom_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/bedroom"
            app:layout_constraintStart_toEndOf="@id/room_title"
            app:layout_constraintTop_toBottomOf="@id/type_description"
            android:contentDescription="@string/details_bedroom_description" />

        <TextView
            android:id="@+id/bedroom_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_bedroom_title"
            android:textSize="@dimen/details_description_text"
            app:layout_constraintTop_toTopOf="@id/surface_icon"
            app:layout_constraintStart_toEndOf="@id/bedroom_icon"/>

        <EditText
            android:id="@+id/bedroom_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bedroom_icon"
            app:layout_constraintTop_toBottomOf="@id/surface_title"/>

        <ImageView
            android:id="@+id/bathroom_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/bathroom"
            app:layout_constraintStart_toEndOf="@id/bedroom_title"
            app:layout_constraintTop_toBottomOf="@id/type_description"
            android:contentDescription="@string/details_bathroom_description" />

        <TextView
            android:id="@+id/bathroom_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_bathroom_title"
            android:textSize="@dimen/details_description_text"
            app:layout_constraintTop_toTopOf="@id/surface_icon"
            app:layout_constraintStart_toEndOf="@id/bathroom_icon"/>

        <EditText
            android:id="@+id/bathroom_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bathroom_icon"
            app:layout_constraintTop_toBottomOf="@id/surface_title"/>

        <TextView
            android:id="@+id/create_interests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Interests"
            app:layout_constraintTop_toBottomOf="@id/surface_input"
            app:layout_constraintStart_toStartOf="parent"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/property_address"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enter_property_address"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:counterEnabled="true"
            app:counterMaxLength="80"
            app:endIconMode="clear_text"
            app:helperText="Enter address"
            app:helperTextEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_interests"
            app:startIconDrawable="@drawable/location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_property_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/create"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:text="@string/save_button"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/property_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>