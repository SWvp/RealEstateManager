<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_property"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/property_image"
            android:layout_width="@dimen/property_image_size"
            android:layout_height="@dimen/property_image_size"
            android:layout_margin="4dp"
            android:src="@drawable/property_sample"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/property_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="1"
            android:textSize="@dimen/property_type_size"
            android:textStyle="bold"
            android:text="@string/property_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/property_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/property_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="1"
            android:textSize="@dimen/property_place_size"
            android:text="@string/property_place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/property_image"
            app:layout_constraintTop_toBottomOf="@+id/property_type" />

        <TextView
            android:id="@+id/property_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="1"
            android:textSize="@dimen/property_price_size"
            android:text="@string/property_price"
            android:textColor="@color/property_price_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/property_image"
            app:layout_constraintTop_toBottomOf="@+id/property_place" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
