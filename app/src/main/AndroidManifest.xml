<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kardabel.realestatemanager">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--GOOGLE MAP API-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyASyYHcFc_BTB-omhZGviy4d3QonaBmcq8"/>

        <activity android:name="com.kardabel.realestatemanager.ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.details.DetailsActivity" />
        <activity android:name=".ui.map.MapActivity" />
        <activity android:name=".ui.create.CreatePropertyActivity" />

    </application>

</manifest>